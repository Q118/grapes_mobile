{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "jsx": "react-native",
        "strict": true,
        "resolveJsonModule": true,
        // "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2020",
        // "checkJs": true,
        "strictNullChecks": true,
        // "strictFunctionTypes": true,
        "lib": ["dom.iterable", "ES6", "DOM", "ESNext"]
    },
    "include": [
        "./src/**/*",
        "./app/**/*"
    ],
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ]
}